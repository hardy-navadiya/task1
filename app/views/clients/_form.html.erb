<div class="row justify-content-center edit_form">
  <div class="col-md-4 col-md-offset-3 ">
  	<%= form_for(@client) do |f| %>
  	<%= render 'errors/error' %>
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %> <br>

      <%= f.label :email %>
      <%= f.email_field :email, class:"form-control" %> <br>

      <%#= f.submit "Client", class: "btn btn-success insert",type:"button" %>

      <% if @client.id.present? %>
        <button class="btn btn-danger update", data-id="<%= client.id%>", type="button">Update</button>
      <% else %>
        <%= f.submit "Client", class: "btn btn-success insert",type:"button" %>
      <% end %>
    <% end %>
  </div>
</div>