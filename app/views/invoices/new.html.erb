<h3 style="text-align:center;">Create new invoice</h3>

<%= render 'form', invoice: @invoice %> <br>

<div class="row justify-content-center">
  <div class="col-md-4 col-md-offset-3">
  	<%= form_for(@invoice) do |f| %>
      <%= f.label :discount %>
      <%= f.number_field :discount, class:"form-control" %> <br>

      <%= f.label :date %>
      <%= f.datetime_field :date, class:"form-control" %> <br>

      <%= f.label :amount %>
      <%= f.number_field :amount, class:"form-control" %> <br>

      <%= f.label :client %>
      <%= f.number_field :client_id, class:"form-control" %> <br>

      <%= current_client.id %>

      <%= f.submit "Client", class: "btn btn-success" %>
    <% end %>
  </div>
</div>