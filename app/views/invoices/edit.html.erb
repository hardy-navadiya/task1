<h3 style="text-align:center;">Edit invoice detail</h3>

<div class="row justify-content-center">
  <div class="col-md-4 col-md-offset-3">
  	<%= form_for(@invoice) do |f| %>
      <%= f.label :discount %>
      <%= f.number_field :discount, class:"form-control" %> <br>

      <%= f.label :date %>
      <%= f.datetime_field :date, class:"form-control" %> <br>

      <%= f.label :amount %>
      <%= f.number_field :amount, class:"form-control" %> <br>

      <%= f.submit "Edit invoice", class: "btn btn-success" %>
    <% end %>
  </div>
</div>